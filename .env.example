# Configuration d'Environnement - IA de Sécurité Informatique Vocale
# =====================================================================

# Configuration Générale
APP_NAME="CyberSec AI Assistant"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL="INFO"
LOG_FILE="logs/cybersec_ai.log"

# Configuration API
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4

# Configuration IA
MODEL_NAME="microsoft/DialoGPT-medium"
MODEL_DEVICE="auto"  # auto, cpu, cuda
TEMPERATURE=0.7
MAX_TOKENS=512

# Services Vocaux Azure Speech Services
AZURE_SPEECH_KEY=""
AZURE_REGION="francecentral"
AZURE_VOICE_NAME="fr-FR-DeniseNeural"

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=""
GOOGLE_PROJECT_ID=""

# OpenAI Services
OPENAI_API_KEY=""
OPENAI_MODEL="whisper-1"
OPENAI_TTS_MODEL="tts-1"

# ElevenLabs (Voix Premium)
ELEVENLABS_API_KEY=""
ELEVENLABS_VOICE_ID=""

# Configuration Audio
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_CHANNELS=1
VOICE_ENERGY_THRESHOLD=300
VOICE_PAUSE_THRESHOLD=0.8

# Configuration de Sécurité
SECURITY_SECRET_KEY=""
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=30
PASSWORD_MIN_LENGTH=8

# Base de Données
DATABASE_URL="sqlite:///cybersec_ai.db"
DATABASE_ECHO=false

# Redis (Cache)
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL=3600

# Configuration Threat Intelligence
THREAT_INTEL_UPDATE_INTERVAL=3600  # secondes
MAX_INDICATORS_CACHE=100000
BEHAVIORAL_ANALYSIS_WINDOW=24  # heures

# Configuration de Communication
MAX_CONVERSATION_HISTORY=50
VOICE_RESPONSE_TIMEOUT=30  # secondes
ESCALATION_TIMEOUT=300  # secondes

# Configuration de Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# Configuration de Sécurité Réseau
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
RATE_LIMIT_PER_MINUTE=60

# Configuration des Alertes
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=""
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=""
ALERT_EMAIL_PASSWORD=""
ALERT_EMAIL_FROM=""
ALERT_EMAIL_TO=""

ALERT_SMS_ENABLED=false
ALERT_SMS_API_KEY=""
ALERT_SMS_PHONE_NUMBER=""

ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=""

# Configuration des Modèles d'IA
SPACY_MODEL="en_core_web_sm"
HUGGINGFACE_CACHE_DIR="./models"
TENSORFLOW_GPU_MEMORY_GROWTH=true

# Configuration de Performance
WORKER_TIMEOUT=300
MAX_REQUESTS_PER_WORKER=1000
PRELOAD_APP=true

# Configuration de Développement
RELOAD_ON_CHANGES=true
ENABLE_PROFILING=false
MOCK_VOICE_SERVICES=false
DEMO_MODE=false

# Configuration de Production
SSL_ENABLED=false
SSL_CERT_PATH=""
SSL_KEY_PATH=""
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # secondes (24h)